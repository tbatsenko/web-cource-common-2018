<header class="main_hdr">
    <button>Menu</button>
    <button id="logo_btn"><img src="images/logo_gmail_lockup_default_1x.png"></button>
    <button>search</button>
    <input id="main_src" placeholder="Search mail">
    <button>expand_more</button>
    <button>apps</button>
    <button>notifications_none</button>
</header>
<aside class="left-menu">
    <button>Compose</button>
    {{#navigation}}
        {{#button}}
            <button class="left-menu__link">{{&.}}</button>
        {{/button}}
    {{/navigation}}
    <hr color="#f5f5f5">
    <button>Mark</button>
    <hr color="#f5f5f5">
</aside>
<main class="mails">
    <section class="mails__navigation">
        <button class="mails__mail__button"><img src="images/select.png"></button>
        <button class="mails__mail__button"><img src="images/refresh.png"></button>
        <button class="mails__mail__button"><img src="images/more_vert.png"></button>
    </section>
    {{#mails}}
        <section class="mails__mail">
            {{#buttons}}
                <button class="mails__mail__button">{{&.}}</button>
            {{/buttons}}
            <h4 class="mails__mail__title">{{title}}</h4>
            <p class="mails_mail__description">{{description}}</p>
            <h5 class="mails__mail__time">{{date}}</h5>
        </section>
    {{/mails}}
</main>
<aside class="right-menu">
    <a href="#" class="right-menu__buttons"><img src="images/calendar_2x.png"></a>
    <a href="#" class="right-menu__buttons"><img src="images/keep_2x.png"></a>
    <a href="#" class="right-menu__buttons"><img src="images/tasks2_2x.png"></a>
</aside>
