<header>
    <nav id="first-nav">
        <div id="logo" class="left-part">
            <div id="menu-border" class="transp-btn">
                <img id="menu-icon" src="imgs/menu.png" alt="menu">
            </div>
            <img id="logo-img" src="https://ssl.gstatic.com/ui/v1/icons/mail/rfr/logo_gmail_lockup_light_1x.png" alt="logo" />
        </div>
        <div id="first-nav-content">
            <div class="nav-left-part">
                <form action="" id="search-form">
                    <button id="search-btn">
                        <div class="search-icon-border" class="transp-btn">
                            <img class="search-icon" src="imgs/search.png" alt="search">
                        </div>
                    </button>
                    <input type="text" id="search-input" placeholder="Search mail">
                    <button id="search-dd">
                        <div class="search-icon-border" class="transp-btn">
                            <img class="search-icon" src="imgs/dd.png" alt="dropdown">
                        </div>
                    </button>
                </form>
            </div>
            <div class="nav-right-part">
                <div class="right-btn-border transp-btn">
                    <svg class="right-btn-icon">
                        <path d="M4 8h4V4H4v4zm6 12h4v-4h-4v4zm-6 0h4v-4H4v4zm0-6h4v-4H4v4zm6 0h4v-4h-4v4zm6-10v4h4V4h-4zm-6 4h4V4h-4v4zm6 6h4v-4h-4v4zm0 6h4v-4h-4v4z"></path>
                    </svg>
                </div>
                <div class="right-btn-border transp-btn">
                    <svg class="right-btn-icon">
                        <path d="M12,2C6.5,2,2,6.5,2,12c0,5.5,4.5,10,10,10s10-4.5,10-10C22,6.5,17.5,2,12,2z M12,18c-0.6,0-1-0.5-1-1h2 C13,17.5,12.5,18,12,18z M17,16H7v-0.6l1.2-1.2v-3c0-1.9,1-3.4,2.8-3.8V6.9C11.1,6.4,11.5,6,12,6s0.9,0.4,0.9,0.9v0.4 c1.8,0.4,2.8,2,2.8,3.8v3l1.2,1.2V16z"></path>
                    </svg>
                </div>
                <div class="right-btn-border transp-btn" id="name-border">
                    <div id="name-icon">R</div>
                </div>
            </div>
        </div>
    </nav>
</header>
<div id="main-container">
    <aside id="left-bar" class="left-part">

        <button id="write-btn">
            <img id="write-icon" src="https://www.gstatic.com/images/icons/material/colored_icons/1x/create_32dp.png"
                alt="Write">
            Написати
        </button>
        <ul id="left-bar-menu">
            {{#aside-buttons}}
            <li class="left-bar-menu-item">
                <div class="item-info">
                    <img src={{image}} alt="income" class="item-icon">
                    <p class="item-text">{{text}}</p>
                </div>
                {{#if counter}}
                <p class="item-text">{{counter}}</p>
                {{else}}
                <p class="item-text"></p>
                {{/if}}
            </li>
            {{/aside-buttons}}
        </ul>
    </aside>


    <main id="main-content">
        <nav id="second-nav">
            <div class="nav-left-part">
                <button id="select-btn" class="transp-btn second-nav-btn">
                    <img class="second-nav-btn-icon" src="https://www.gstatic.com/images/icons/material/system/1x/check_box_outline_blank_black_20dp.png"
                        alt="checkbox">
                </button>
                <button id="reload-btn" class="transp-btn second-nav-btn">
                    <img class="second-nav-btn-icon" src="https://www.gstatic.com/images/icons/material/system/1x/refresh_black_20dp.png"
                        alt="reload">
                </button>
                <button class="transp-btn second-nav-btn">
                    <img class="second-nav-btn-icon" src="https://www.gstatic.com/images/icons/material/system/1x/more_vert_black_20dp.png"
                        alt="more">
                </button>
            </div>
            <div class="nav-right-part">
                <button id="message-count-btn" class="transp-btn">
                    1-50 from 4 792
                </button>
                <button class="transp-btn second-nav-btn">
                    <img class="second-nav-btn-icon" src="https://www.gstatic.com/images/icons/material/system/1x/chevron_left_black_20dp.png"
                        alt="previous">
                </button>
                <button class="transp-btn second-nav-btn">
                    <img class="second-nav-btn-icon" src="https://www.gstatic.com/images/icons/material/system/1x/chevron_right_black_20dp.png"
                        alt="next">
                </button>
                <button class="transp-btn second-nav-btn" id="settings-btn">
                    <img class="second-nav-btn-icon" src="https://www.gstatic.com/images/icons/material/system/1x/settings_black_20dp.png"
                        alt="settings">
                </button>
        </nav>


        <div id="email-sections">
            {{#email-sections}}
            <button class="email-section transp-btn">
                <img class="section-icon" src="{{image}}" alt="{{text}}">
                {{text}}
            </button>
            {{/email-sections}}
        </div>
        <ul id="email-box">
            {{#emails}}
            <li class="email-list">

                <div id="email-list-left-part">
                    <button class="transp-btn email-list-btn">
                        <img class="email-list-btn-icon" src="https://www.gstatic.com/images/icons/material/system/1x/check_box_outline_blank_black_20dp.png"
                            alt="checkbox">
                    </button>
                    <button class="transp-btn email-list-btn">
                        <img class="email-list-btn-icon" src="https://www.gstatic.com/images/icons/material/system/1x/star_border_black_20dp.png"
                            alt="star">
                    </button>
                    <button class="transp-btn email-list-btn">
                        <img class="email-list-btn-icon" src="https://www.gstatic.com/images/icons/material/system/1x/label_important_outline_black_20dp.png"
                            alt="label">
                    </button>
                    <div class="email-list-heading">{{heading}}</div>
                    <article class="email-list-content">
                        {{text}}
                    </article>
                </div>
                <button id="email-list-time-btn" class="transp-btn email-list-btn email-list-time">{{time}}</button>
            </li>
            {{/emails}}

        </ul>
    </main>

</div>