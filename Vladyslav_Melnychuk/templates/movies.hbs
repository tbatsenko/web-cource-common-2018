{{#each movies}}
<div class="movie-poster grid-3">
    <header class="movie-poster__header">
        <img class="movie-poster__image" src={{image}} />
    </header>
    <footer class="movie-poster__info">
        <div class="movie-poster__info-wrapper">
            <h4 class="movie-poster__title">{{name}}</h4>
            <ul class="movie-info-small">
                {{#each genres}}
                <li class="movie-info-small__item">{{this}}</li>
                {{/each}}
            </ul>
        </div>
        <div class="movie-poster__grade">
            {{grade}}
        </div>
    </footer>
</div>
{{/each}}