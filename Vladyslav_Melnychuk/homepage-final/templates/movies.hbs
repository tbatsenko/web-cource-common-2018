{{#each movies}}
<div class="movie-poster grid__item--3">
    <header class="movie-poster__header">
        <img class="movie-poster__image" src=img/{{image}} />
        {{!-- https://res.cloudinary.com/dtpb9pmmm/image/upload/c_scale,h_425,w_287/v1546693881/movies/ --}}
    </header>
    <footer class="movie-poster__info">
        <div class="movie-poster__info-wrapper">
            <h4 class="movie-poster__title">{{name}}</h4>
            <ul class="movie-info-small">
                {{#each genres}}
                <li class="movie-info-small__item">{{this}}</li>
                {{/each}}
            </ul>
        </div>
        <div class="grade grade--pink grade--centered">
            {{grade}}
        </div>
    </footer>
</div>
{{/each}}